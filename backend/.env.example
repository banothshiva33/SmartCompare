# Backend Environment Variables

# Server
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/smart-compare
# For production, use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smart-compare?retryWrites=true&w=majority

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Affiliate
AFFILIATE_COMMISSION_PERCENT=5

# AWS (for S3 image storage, optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# Affiliate Tags
AMAZON_AFFILIATE_TAG=smartcompare-20
FLIPKART_AFFILIATE_TAG=smartcompare

# Logging
LOG_LEVEL=info
