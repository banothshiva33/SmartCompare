# ⚠️ NEVER commit .env.local or .env files with real credentials!
# Copy this file to .env.local and fill in your actual values

# ========== Database ==========
# MongoDB Atlas connection string - NEVER expose in frontend
# Backend should handle all DB connections
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# ========== Backend API ==========
# Point to your backend API for sensitive operations
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001
# Add authentication token for backend requests
BACKEND_API_KEY=your_secure_api_key_here

# ========== EmailJS Configuration ==========
# These SHOULD be kept on backend only - NOT NEXT_PUBLIC
# Only use NEXT_PUBLIC if absolutely necessary and rotate keys regularly
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id
EMAILJS_PUBLIC_KEY=your_public_key

# ========== Amazon Associates Program ==========
# MUST be stored on backend - Never expose to frontend
AMAZON_PARTNER_TAG=your_affiliate_tag
AMAZON_ACCESS_KEY=your_access_key
AMAZON_SECRET_KEY=your_secret_key
AMAZON_REGION=IN

# ========== API Rate Limiting ==========
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=30

# ========== Security ==========
JWT_SECRET=your_jwt_secret_key_min_32_chars
ENCRYPTION_KEY=your_32_char_encryption_key

# ========== Feature Flags ==========
NEXT_PUBLIC_AFFILIATE_ENABLED=true
NEXT_PUBLIC_PRICE_ALERTS_ENABLED=true
